<!DOCTYPE html>
<html lang="en">

    <head>
        <%- include ("../partials/head") %>
        <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    </head>

    <body class="is-white">
        <!-- Google Tag Manager (noscript) -->
        <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KQHJPZP" height="0" width="0"
                style="display:none;visibility:hidden"></iframe></noscript>
        <!-- End Google Tag Manager (noscript) -->

        <!-- Pageloader -->
        <div class="pageloader"></div>
        <div class="infraloader is-active"></div>
        <div class="login-wrapper">

            <!-- Main Wrapper -->
            <div class="login-wrapper columns is-gapless">
                <!--Left Side (Desktop Only)-->
                <div class="column is-6 is-hidden-mobile hero-banner">
                    <div class="hero is-fullheight is-login">
                        <div class="hero-body">
                            <div class="container">
                                <div class="left-caption">
                                    <h2>Haydi hiç durma vur başağın marşına.</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--Right Side-->
                <div class="column is-6">
                    <div class="hero form-hero is-fullheight">
                        <!--Logo-->
                        <div class="logo-wrap">
                            <div class="wrap-inner">
                                <img src="/static/icons/smallogodark.png" alt="">
                            </div>
                        </div>
                        <!--Login Form-->
                        <div class="hero-body">
                            <div class="form-wrapper">
                                <!--Avatar-->
                                <div class="avatar">
                                    <div class="badge">
                                        <i data-feather="check"></i>
                                    </div>
                                    <img src="/static/icons/smallogowhite.png"
                                        alt="">
                                </div>
                                <!--Form-->
                                <form method="POST">
                                    <% if (success) { %>
                                        <p class="text-success">Kayıt işleminiz başarılı bir şekilde gerçekleşti.</p>
                                    <% } %>
                                        <% if (message) { %>
                                            <div class="alert alert-<%= message.class %>">
                                                <%= message.text %> 
                                            </div>
                                        <% } %>
                                    <div class="login-form">
                                        <div class="field">
                                            <div class="control">
                                                <input class="input email-input" type="text" required name="firstName"
                                                    placeholder="Alperen">
                                                <div class="input-icon">
                                                    <i data-feather="user"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="field">
                                            <div class="control">
                                                <input class="input email-input" type="text" required name="lastName"
                                                    placeholder="Nuroğlu">
                                                <div class="input-icon">
                                                    <i data-feather="user"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="field">
                                            <div class="control">
                                                <input class="input email-input" type="text" required name="username"
                                                    placeholder="Alperen NRGL">
                                                <div class="input-icon">
                                                    <!-- <i data-feather="user"></i> -->
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-tag"><path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path><line x1="7" y1="7" x2="7.01" y2="7"></line></svg>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="field">
                                            <div class="control">
                                                <input class="input email-input" type="text" required name="email"
                                                    placeholder="alperen@gmail.com">
                                                <div class="input-icon">
                                                    <i data-feather="mail"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="field">
                                            <div class="control">
                                                <input class="input password-input" type="password" required name="password"
                                                    placeholder="●●●●●●●">
                                                <div class="input-icon">
                                                    <i data-feather="lock"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="field">
                                            <div class="control">
                                                <button type="submit"
                                                    class="button is-solid primary-button raised is-rounded is-fullwidth">Kayıt Ol</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <div class="section forgot-password">
                                    <div class="has-text-centered">
                                        <a href="/account/new-password">Parolanımı unuttun?</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

