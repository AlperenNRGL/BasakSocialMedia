<!DOCTYPE html>
<html lang="tr">

    <head>
        <%- include ("../partials/head") %>
        <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    </head>

    <body class="is-white">
        <!-- Google Tag Manager (noscript) -->
        <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KQHJPZP" height="0" width="0"
                style="display:none;visibility:hidden"></iframe></noscript>
        <!-- End Google Tag Manager (noscript) -->

        <!-- Pageloader -->
        <div class="pageloader"></div>
        <div class="infraloader is-active"></div>
        <div class="login-wrapper">

            <!-- Main Wrapper -->
            <div class="login-wrapper columns is-gapless">
                <!--Left Side (Desktop Only)-->
                <div class="column is-6 is-hidden-mobile hero-banner">
                    <div class="hero is-fullheight is-login">
                        <div class="hero-body">
                            <div class="container">
                                <div class="left-caption">
                                    <h2>Haydi hiç durma vur başağın marşına.</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--Right Side-->
                <div class="column is-6">
                    <div class="hero form-hero is-fullheight">
                        <!--Logo-->
                        <div class="logo-wrap">
                            <div class="wrap-inner">
                                <img src="/static/icons/smallogodark.png" alt="">
                            </div>
                        </div>
                        <!--Login Form-->
                        <div class="hero-body">
                            <div class="form-wrapper">
                                <!--Avatar-->
                                <div class="avatar">
                                    <div class="badge">
                                        <i data-feather="check"></i>
                                    </div>
                                    <img src="/static/icons/smallogowhite.png" alt="">
                                </div>
                                <!--Form-->
                                <form method="POST">
                                    <% if (success) { %>
                                        <p class="text-success">Kayıt işleminiz başarılı bir şekilde gerçekleşti</p>
                                    <% } %>
                                        <% if (message) { %>
                                            <div class="alert alert-<%= message.class %>">
                                                <%= message.text %> 
                                            </div>
                                        <% } %>
                                    <div class="login-form">
                                        <div class="field">
                                            <div class="control">
                                                <input class="input email-input" type="text" name="email"
                                                    placeholder="jennadavis@gmail.com">
                                                <div class="input-icon">
                                                    <i data-feather="user"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="field">
                                            <div class="control">
                                                <input class="input password-input" type="password" name="password"
                                                    placeholder="●●●●●●●">
                                                <div class="input-icon">
                                                    <i data-feather="lock"></i>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="field">
                                            <div class="control ms-2">
                                                <div class="form-check">
                                                    <input class="form-check-input" name="session" type="checkbox"  id="flexCheckChecked" checked>
                                                    <label class="form-check-labe text-secondary" for="flexCheckChecked">10 Gün şifre sorma</label>
                                                  </div>
                                            </div>
                                        </div>

                                        <div class="field">
                                            <div class="control">
                                                <button
                                                    class="button is-solid primary-button raised is-rounded is-fullwidth">Giriş Yap</button>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="field">
                                            <div class="control">
                                                <a href="/account/register" style="text-decoration: none;" class="button is-solid primary-button raised is-rounded is-fullwidth">Hala kayıt olmadın mı?</a>
                                            </div>
                                        </div>

                                    </div>
                                </form>
                                <div class="section forgot-password">
                                    <div class="has-text-centered">
                                        <a href="/account/new-password">Parolanımı unuttun?</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

